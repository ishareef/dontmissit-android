    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:id="@+id/imageView1_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/kartik_profile_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kartik Rishi"
        android:id="@+id/textView1_1"
        android:layout_alignTop="@+id/imageView1_1"
        android:layout_toEndOf="@+id/imageView1_1"
        android:layout_marginStart="32dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_1_1"
        android:layout_marginEnd="21dp"
        android:src="@drawable/ic_action_name"
        android:layout_alignBottom="@+id/imageView1_1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Age 25 - Best Friend"
        android:id="@+id/textView"
        android:layout_below="@+id/textView1_1"
        android:layout_alignStart="@+id/textView1_1"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="&quot;Happy Birthday Kartik!"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="I hope Japan was fun!&quot;"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView1_1"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>